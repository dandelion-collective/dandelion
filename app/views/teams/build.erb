<% form_for @team, @team.new_record? ? "/g/#{@gathering.slug}/teams/new" : "/g/#{@gathering.slug}/teams/#{@team.id}/edit" do |f| %>
  <%= f.text_block :name %>
  <%= f.wysiwyg_block :intro %>
  <% if @gathering.enable_budget %>
    <%= f.number_block :budget %>
  <% end %>
  <%= f.submit_block destroy_url: "/g/#{@gathering.slug}/teams/#{@team.id}/destroy" %>
<% end %>
