<script>
  $(function() {
    var c = new countUp.CountUp('ticket-count',
      <%=Ticket.count%>
    );
    c.start();
    var c = new countUp.CountUp('worth-count',
      <%= Float("%.3g" % Order.all.sum { |o| (o.value && FIAT_CURRENCIES.include?(o.currency)) ? Money.new(o.value*100, o.currency) : 0 }).to_i%>
    );
    c.start();
  })
</script>
